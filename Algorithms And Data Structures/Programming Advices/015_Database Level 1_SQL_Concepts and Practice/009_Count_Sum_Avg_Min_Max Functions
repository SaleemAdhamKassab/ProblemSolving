select count(t.id),
       sum(t.monthly_salary) totalsalaries,
       avg(t.monthly_salary) avgsalaries,
       min(t.monthly_salary) minsalary,
       max(t.monthly_salary) maxSAlary
from employees t;
------------------------------
select count(t.id),
       sum(t.monthly_salary) totalsalaries,
       avg(t.monthly_salary) avgsalaries,
       min(t.monthly_salary) minsalary,
       max(t.monthly_salary) maxSAlary
from employees t
where t.department_id =1;
------------------------------
select count(t.id) totalEmployees from employees t;
select count(t.exit_date) resignedEmployees from employees t;
