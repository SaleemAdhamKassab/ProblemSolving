var siteUrl = "http://portal/sites/your-site"; // <-- Update if needed

// Create the context
using (var context = new ClientContext(siteUrl))
{
    // Use default Windows credentials
    context.Credentials = CredentialCache.DefaultNetworkCredentials;

    // Build the folder path
    string folderServerRelativeUrl = "/departments/tc/nsd/ss/Google Earth General/2025"; 

    // Load the folder
    var folder = context.Web.GetFolderByServerRelativeUrl(folderServerRelativeUrl);

    // Load folder properties (name, etc.)
    context.Load(folder);
    context.ExecuteQuery();

    Console.WriteLine($"Successfully accessed folder: {folder.Name}");
}
