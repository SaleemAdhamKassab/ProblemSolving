 static int countVowels(string s)
        {
            int counter = 0;

            for (int i = 0; i < s.Length; i++)
                if (isVowel(s[i]))
                    counter++;
            return counter;
        }

static bool isVowel(char character)
        {
            character = charToLowerCase(character);
            switch (character)
            {
                case 'a':
                case 'e':
                case 'i':
                case 'o':
                case 'u':
                    return true;

                default:
                    return false;
            }
        }
  
  static char charToLowerCase(char c) => (int)c >= 65 && (int)c <= 90 ? (char)((int)c + 32) : c;
